<%= form_for @player, url: login_path, method: :post do |f| %>
  <%= f.label :username %>
  <%= f.text_field :username %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.submit "Log In" %>
  Or <%= link_to(controller: 'players', action: 'new') { 'Sign Up' } %>
<% end %>