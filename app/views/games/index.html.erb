<% flash.each do |type, msg| %>
  <div>
    <%= msg %>
  </div>
<% end %>

<h1>All Games</h1>
<ul>
<% @games.each do |game| %>
<li><h2><%= link_to game.title, game_path(game) %></h2>
<h3>Release Date: <%= game.release_date %></h3>
<h3>Genre: <%= game.genre %></h3>
<%= link_to 'Tournaments', game_tournaments_path(game)%>
<% end %>
<% if @games.length == 0 %>
<h3>No games to show</h3>
<% end %>
</li>
</ul>
<br>
<%= link_to 'New Game', new_game_path %>
<br>
<%= link_to 'All Tournaments', tournaments_path %>
<br>
<%= link_to 'Player Profile', player_path(@player) %>