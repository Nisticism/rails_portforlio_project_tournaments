<%= form_for(tournament) do |f| %>

  <% if tournament.errors[:name].empty? %>
    <div class="field">
  <% else %>
    <div class="field_with_errors">
  <% end %>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <% if tournament.errors[:start_date].empty? %>
    <div class="field">
  <% else %>
    <div class="field_with_errors">
  <% end %>
  <%= f.label :start_date %>
  <%= f.text_field :start_date %>
  </div>

  <% if tournament.errors[:prize_pool].empty? %>
    <div class="field">
  <% else %>
    <div class="field_with_errors">
  <% end %>
  <%= f.label :prize_pool %>
  <%= f.text_field :prize_pool %>
  </div>

  <% if tournament.game_id %>
    <%= f.collection_select(:game, Game.all, :id, :title, {:selected => tournament.game_id}) %>
  <% else %>
    <%= f.collection_select(:game, Game.all, :id, :title, promt: 'Select Game') %>
  <% end %>

  <br>
  <br>
  <%= f.submit button_tag %>

<% end %>